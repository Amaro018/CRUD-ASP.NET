@model List<Product>
@{
}

<div class="text-center mb-4">
    <h2>List of Products</h2>
</div>

<div class="row mb-4">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Products" asp-action="Create">New Product</a>
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card h-100 rounded-2">
                    <img src="products/@product.ImageFileName" class="card-img-top" alt="Image of @product.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">
                            <strong>Price:</strong> @(product.Price) Php<br>
                            <strong>Description:</strong> @product.Description<br>
                            <strong>Created At:</strong> @product.CreatedAt.ToString("MM/dd/yyyy")
                        </p>
                    </div>
                    <div class="card-footer text-center">
                        <a class="btn btn-dark btn-sm" asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" onclick="return confirm('Sure you want to delete this product?')">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
